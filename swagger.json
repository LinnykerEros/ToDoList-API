{
  "openapi": "3.0.1",
  "info": {
    "title": "API ToDo List",
    "description": "Documentation API ToDo List",
    "version": "1.0.0"
  },
  "basePath": "/",

  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },

  "paths": {
    "/tasks": {
      "get": {
        "summary": "Search for all Tasks!",
        "description": "This route will be responsible for search for all Tasks!",
        "tags": ["Tasks"],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/tasks/create": {
      "post": {
        "summary": "Task registration!",
        "description": "This route will be responsible for registering a Task!",
        "tags": ["Tasks"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "task": {
                    "type": "string"
                  }
                },
                "example": {
                  "task": "Finish documentation on swagger."
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/tasks/update/{id}": {
      "put": {
        "summary": "Task update!",
        "description": "This route will be responsible for updating a Task!",
        "tags": ["Tasks"],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "type": "string",
            "required": true
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "task": {
                    "type": "string"
                  }
                },
                "example": {
                  "task": "Finish documentation on swagger (DONE)."
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Task updated successfully!"
          }
        }
      }
    },
    "/tasks/delete/{id}": {
      "delete": {
        "summary": "Delete a task!",
        "description": "This route will be responsible for delete a Task!",
        "tags": ["Tasks"],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Task deleted succesfully!"
          }
        }
      }
    },

    "/users": {
      "get": {
        "summary": "Search for all Users!",
        "description": "This route will be responsible for search for all Users!",
        "tags": ["Users"],

        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/users/{id}": {
      "get": {
        "summary": "Search for a Users by id!",
        "description": "This route will be responsible for search for a Users by id!",
        "tags": ["Users"],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "User not found."
          }
        }
      }
    },

    "/create/users": {
      "post": {
        "security": [{ "bearerAuth": [] }],
        "summary": "User registration!",
        "description": "This route will be responsible for registering a user",
        "tags": ["Users"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "example": {
                  "email": "pedro_oliverira@gmail.com",
                  "password": "13456"
                }
              }
            }
          }
        },
        "responses": {
          "401": {
            "description": "Unauthorized"
          },
          "400": {
            "description": "This User already exist!"
          },
          "200": {
            "description": "OK"
          }
        }
      }
    }
  }
}
